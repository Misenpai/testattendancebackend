// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum LocationType {
  ABSOLUTE
  APPROX
  FIELDTRIP
}

enum UserRole {
  USER
  SYSTEM
}

enum SessionType {
  FORENOON  
  AFTERNOON 
}

enum AttendanceType {
  FULL_DAY
  HALF_DAY
}

model User {
  userKey     String            @id @default(cuid())
  empCode     String            @unique @db.VarChar(255)
  username    String            @unique @db.VarChar(255)
  email       String            @unique @db.VarChar(255)
  password    String            @db.VarChar(255)
  location    String            @default("all") @db.VarChar(255)
  role        UserRole          @default(USER)
  isActive    Boolean           @default(true)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt


  userLocation         UserLocation?
  attendances          Attendance[]
  attendanceDates      AttendanceDate[]

  @@map("users")
  @@index([role])
  @@index([isActive])
  @@index([empCode])
}

model UserLocation {
  locationKey  String       @id @default(cuid())
  empCode      String       @unique @db.VarChar(255)
  username     String       @db.VarChar(255)
  locationType LocationType @default(ABSOLUTE)
  updatedAt    DateTime     @updatedAt
  createdAt    DateTime     @default(now())
  
  approxLat    Float?       @db.Float
  approxLng    Float?       @db.Float
  approxRadius Int?         @default(100)
  user         User         @relation(fields: [empCode], references: [empCode], onDelete: Cascade)
  fieldTrips   FieldTrip[]

  @@map("user_locations")
  @@index([locationType])
}

model Attendance {
  attendanceKey String            @id @default(cuid())
  empCode       String            @db.VarChar(255)
  username      String            @db.VarChar(255)
  takenLocation String?           @db.VarChar(255)
  date          DateTime          @db.Date
  checkInTime   DateTime          @default(now())
  checkOutTime  DateTime?
  sessionType   SessionType       
  attendanceType AttendanceType?  
  isCheckedOut  Boolean          @default(false)
  createdAt     DateTime          @default(now())


  user           User              @relation(fields: [empCode], references: [empCode], onDelete: Cascade)
  photos         AttendancePhoto[]
  audio          AttendanceAudio[]
  attendanceDate AttendanceDate?

  @@map("attendance")
  @@unique([empCode, date])
  @@index([date])
  @@index([empCode, date])
  @@index([empCode])
  @@index([sessionType])
  @@index([attendanceType])
}

model AttendanceDate {
  dateKey      String         @id @default(cuid())
  empCode      String         @db.VarChar(255)
  date         DateTime       @db.Date
  year         Int
  month        Int            
  day          Int            
  dayOfWeek    Int            
  weekOfYear   Int            
  isPresent    Boolean        @default(true)
  attendanceType AttendanceType? 
  attendanceRef String         @unique
  createdAt    DateTime       @default(now())


  user         User       @relation(fields: [empCode], references: [empCode], onDelete: Cascade)
  attendance   Attendance @relation(fields: [attendanceRef], references: [attendanceKey], onDelete: Cascade)

  @@map("attendance_dates")
  @@unique([empCode, date])
  @@index([empCode, year, month])
  @@index([empCode, date])
  @@index([year, month])
  @@index([empCode])
}

model AttendancePhoto {
  photoKey     String     @id @default(cuid())
  attendanceRef String
  photoUrl     String     @db.VarChar(500)
  photoType    String?    @db.VarChar(50)
  createdAt    DateTime   @default(now())
  
  attendance   Attendance @relation(fields: [attendanceRef], references: [attendanceKey], onDelete: Cascade)

  @@map("attendance_photos")
  @@index([attendanceRef])
}

model AttendanceAudio {
  audioKey     String     @id @default(cuid())
  attendanceRef String
  audioUrl     String     @db.VarChar(500)
  duration     Int?      
  createdAt    DateTime   @default(now())
  
  attendance   Attendance @relation(fields: [attendanceRef], references: [attendanceKey], onDelete: Cascade)

  @@map("attendance_audio")
  @@index([attendanceRef])
}


model AttendanceCalendar {
  calendarKey  String   @id @default(cuid())
  empCode      String   @db.VarChar(255)
  year         Int
  month        Int      
  daysMask     String   @db.VarChar(31) 
  totalFullDays Int   @default(0)
  totalHalfDays Int   @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("attendance_calendar")
  @@unique([empCode, year, month])
  @@index([empCode])
  @@index([year, month])
}

model FieldTrip {
  tripKey      String     @id @default(cuid())
  empCode      String     @db.VarChar(255)
  startDate    DateTime   @db.Date
  endDate      DateTime   @db.Date
  description  String?    @db.Text
  createdBy    String     @db.VarChar(255)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  isActive     Boolean    @default(true)
  userLocation UserLocation @relation(fields: [empCode], references: [empCode], onDelete: Cascade)

  @@map("field_trips")
  @@index([empCode])
  @@index([startDate, endDate])
  @@index([isActive])
}